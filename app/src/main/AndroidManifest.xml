<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.zzd.test">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BASST"
        android:requestLegacyExternalStorage="true"
        tools:targetApi="31">
        <activity
            android:name="com.zzd.test.MainActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity
            android:name="com.zzd.dsptest.DSPTest"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:exported="false"/>

        <activity
            android:name="com.zzd.fxtest.FXTest"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:exported="false"/>

        <activity
            android:name="com.zzd.livespec.LiveSpec"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:exported="false"/>

        <activity
            android:name="com.zzd.netradio.NetRadio"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:exported="false"/>

        <activity
            android:name="com.zzd.plugins.Plugins"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:exported="false"/>

        <activity
            android:name="com.zzd.rectest.RecTest"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:exported="false"/>

        <activity
            android:name="com.zzd.spectrum.Spectrum"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:exported="false"/>



    </application>

</manifest>